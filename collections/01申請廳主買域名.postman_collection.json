		{
			"name": "取得廳主買域名項目資料 (Job狀態檢查)",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"const responseJson = pm.response.json();",
							"const expectedNames = [",
							"    \"CheckDomainBlocked\",",
							"    \"VerifyTLD\",",
							"    \"UpdateNameServer\",",
							"    \"UpdateDomainRecord\",",
							"    \"MergeErrorRecord\",",
							"    \"RecheckDomainResolution\",",
							"    \"RemoveTag\"",
							"];",
							"",
							"// 儲存 job_id",
							"expectedNames.forEach(name => {",
							"    const job = responseJson.find(item => item.name === name);",
							"    if (job) {",
							"        pm.collectionVariables.set(`${name}_job_id`, job.job_id);",
							"    }",
							"});",
							"",
							"// 統計",
							"const failedJobs = responseJson.filter(job => job.status === \"failure\");",
							"const pendingJobs = responseJson.filter(job => job.status !== \"success\" && job.status !== \"failure\");",
							"",
							"pm.collectionVariables.set(\"poll_failed_job_count\", failedJobs.length.toString());",
							"pm.collectionVariables.set(\"poll_pending_job_count\", pendingJobs.length.toString());",
							""
						],
						"type": "text/javascript",
						"packages": {}
					}
				}
			],
			"request": {
				"auth": {
					"type": "noauth"
				},
				"method": "GET",
				"header": [
					{
						"key": "Accept",
						"value": "application/json",
						"type": "text"
					},
					{
						"key": "X-API-Key",
